<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alexander.codebreaker.Code"
    tools:showIn="@layout/activity_code">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/first_section_title"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColor="#000000" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignBounds">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="461dp"
                android:layout_gravity="fill_horizontal|top|center"
                android:weightSum="1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdobtn11"
                    android:checked="false"
                    android:text=" "
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="-50sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdobtn12"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:text=" "
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="-32dp" />

            </RadioGroup>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="336dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn21"
                    android:layout_marginTop="100sp"
                    android:checked="false"
                    android:layout_marginLeft="30sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn22"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-30sp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn23"
                    android:layout_gravity="right"
                    android:layout_marginTop="-34sp"
                    android:checked="false"
                    android:layout_marginRight="30sp" />

            </RadioGroup>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn31"
                    android:layout_marginTop="200sp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn32"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-32sp"
                    android:layout_marginRight="60dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn33"
                    android:layout_gravity="right"
                    android:layout_marginTop="-32sp"
                    android:layout_marginRight="95sp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/rdobtn34"
                    android:layout_gravity="right"
                    android:layout_marginTop="-32sp"
                    android:checked="false" />

            </RadioGroup>

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_button"
            android:id="@+id/btncheck"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-110dp" />
    </LinearLayout>

</RelativeLayout>
